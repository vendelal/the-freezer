---
title: The Freezer
---


<ul class="inventory">
  <% data.pages.home.inventory.each do | inventory_item | %>
    <li class="inventory__item">

      <%= image_tag(
        inventory_item.image,
        class: "inventory__item-image"
      ) %>

      <div class="inventory__details">

        <h2 class="inventory__item-name">
          <%= inventory_item.label %>
        </h2>

        <label class="inventory__data-label">
          Source
        </label>

        <p class="inventory__data">
          <%= inventory_item.source %>
        </p>

        <label class="inventory__data-label">
          Amount
        </label>

        <p class="inventory__data">
          <%= inventory_item.amount %>
        </p>

      </div>
    </li>
  <% end %>
</ul>
